<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Lab1$PlaceholderFragment">



    <Button
        android:id="@+id/add_chat"
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/delete_chat"
        android:text="Delete"
        android:layout_toRightOf="@id/add_chat"
        android:layout_toEndOf="@id/add_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />

    <Button
        android:id="@+id/change_username"
        android:text="Set Username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />

    <EditText
        android:id="@+id/chatbox"
        android:inputType="text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <ListView
        android:id="@+id/chat_list"
        android:layout_below="@id/add_chat"
        android:layout_above="@id/chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />


</RelativeLayout>
